server {
    listen                  ${NGINX_PORT};
    root                    /html;
    proxy_connect_timeout   ${NGINX_TIMEOUT};
    proxy_send_timeout      ${NGINX_TIMEOUT};
    proxy_read_timeout      ${NGINX_TIMEOUT};
    send_timeout            ${NGINX_TIMEOUT};
    client_body_timeout     ${NGINX_TIMEOUT};


    location ~ ^/(api|docs|openapi.json) {
        proxy_pass http://${BACKEND_HOST}:${BACKEND_PORT};
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect default;
    }

    location ~ /(assets|static|uploads) {
        gzip on;
        gzip_comp_level 9;
        gzip_types text/css image/svg+xml application/javascript application/json;
        root /html;
    }

    location / {
        gzip on;
        gzip_comp_level 9;
        try_files /index.html =404;
    }
}
